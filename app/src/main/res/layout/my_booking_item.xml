<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/my_booking_item_room_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room no"
            android:textColorHint="@color/light_blue"
            android:textColor="@color/light_blue"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/my_booking_item_booking_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Booking date"
                android:textColorHint="@color/light_blue"
                android:textColor="@color/light_blue"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/my_booking_item_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Time"
                android:textColorHint="@color/light_blue"
                android:textColor="@color/light_blue"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/my_booking_item_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Time"
                android:textColorHint="@color/light_blue"
                android:textColor="@color/light_blue"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/my_booking_item_edit_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/edit_icon"
            android:clickable="true"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/Orange"/>
</LinearLayout>