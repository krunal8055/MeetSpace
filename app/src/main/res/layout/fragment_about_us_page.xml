<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".About_us_page"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo_about_us"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/logot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/app_name_about_us"
            android:layout_marginTop="32dp" />
        <TextView
            android:id="@+id/app_name_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meetspace"
            android:textSize="20sp"
            android:textColor="@color/light_blue"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/logo_about_us"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/app_detail_about_us"/>
        <TextView
            android:id="@+id/app_detail_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meetspace is a Meeting place booking app for Cégep de la Gaspésie et des Iles ( Montreal Campus )."
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name_about_us"
            app:layout_constraintBottom_toTopOf="@+id/app_feature_about_us"/>
        <TextView
            android:id="@+id/app_feature_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/app_feature_about_us"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_detail_about_us"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_version_about_us"
            android:textAlignment="center"
            android:textColor="@color/Orange"
            android:layout_margin="20dp"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/app_feature_about_us"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>